generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  stripeCustomerId     String?   @unique
  stripeSubscriptionId String?
  subscriptionStatus   String?   @default("inactive")
  
  taxProfile    TaxProfile?
  documents     Document[]
  deductions    Deduction[]
  estimates     QuarterlyEstimate[]
  conversations Conversation[]
}

model TaxProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  filingStatus    String?
  annualIncome    Float?
  state           String?
  selfEmployed    Boolean  @default(false)
  dependents      Int      @default(0)
  
  w2Income        Float?   @default(0)
  selfEmploymentIncome Float? @default(0)
  investmentIncome Float?  @default(0)
  rentalIncome    Float?   @default(0)
  otherIncome     Float?   @default(0)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Document {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name        String
  type        String
  url         String?
  extractedData Json?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Deduction {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  category    String
  name        String
  amount      Float
  description String?
  verified    Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model QuarterlyEstimate {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  year        Int
  quarter     Int
  estimatedTax Float
  paidAmount  Float    @default(0)
  dueDate     DateTime
  paid        Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([userId, year, quarter])
}

model Conversation {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title     String?
  messages  Message[]
  
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  
  role           String
  content        String
  
  createdAt      DateTime     @default(now())
}
